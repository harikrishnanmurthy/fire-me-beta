  <bean id="userDao" class="com.ambank.gst.web.dao.ManageUserDAOImpl">
  	<property name="dataSource" ref="dataSource" />
  </bean>
  
   <bean id="taxCodeDao" class="com.ambank.gst.web.dao.TaxCodeDAOImpl">
  	<property name="dataSource" ref="dataSource" />
   </bean>
   
   <bean id="mappingDao" class="com.ambank.gst.web.dao.GSTMappingDAOImpl">
  	<property name="dataSource" ref="dataSource" />
   </bean>
   
   <bean id="fitrDao" class="com.ambank.gst.web.dao.FITRDAOImpl">
